<h1>Custom Lists</h1>
<a href="/lists/add" class="btn btn-primary mb-3">New List</a>
<table class="table table-bordered">
  {{#if results}}
  <thead>
    <th>Name</th>
    <th>Owner</th>
    <th>Members</th>
    <th>Actions</th>
  </thead>
  {{/if}}
  <tbody>
    {{#each results}}
    <tr>
      <td style="vertical-align: middle">{{list_desc}}</td>
      <td style="vertical-align: middle">{{owner}}</td>
      <td style="vertical-align: middle">{{member_count}}</td>
      <td>
        <div class="d-flex justify-content-center">
          <a href="/lists/view/{{list_id}}" class="btn btn-primary btn-sm mr-2">View</a>
          <a href="/lists/edit/{{list_id}}" class="btn btn-primary mr-2 btn-sm">Edit</a>
          <form action="/lists/delete/{{list_id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger mr-2 btn-sm">Delete</button>
          </form>
        </div>
      </td>
    </tr>
    {{else}}
    <p>There aren't any lists yet!</p>
    {{/each}}
  </tbody>
</table>
