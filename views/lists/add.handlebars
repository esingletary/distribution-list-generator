<a href="/lists" class="btn btn-primary mb-3">Back</a>
<div class="card card-body">
  <h3>New List</h3>
  <form action="/lists/add" method="post">
    <div class="form-group">
      <label for="listName">List Name</label>
      <input type="text" class="form-control" name="listName" maxlength="50" required>
    </div>
    <div class="form-group">
      <label for="ownerId">Owner</label>
      <input type="text" class="form-control" name="ownerId" maxlength="4" value="888" required readonly>
    </div>
    <div class="form-group">
      <label for="listMembers">List Members</label>
      <input type="text" class="form-control" name="listMembers">
      <small id="listMembersHelp" class="form-text text-muted">Comma separated IDs please</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
