<a href="/lists/view/{{results.list_id}}" class="btn btn-primary mb-3">Back</a>
<div class="card card-body">
  <h3>Edit Name</h3>
  <form action="/lists/add" method="post">
    <div class="form-group">
      <label for="listName">List Name</label>
      <input type="text" class="form-control" name="listName" maxlength="50" value="{{results.list_desc}}" required>
    </div>
    <div class="form-group">
      <label for="ownerId">Owner</label>
      <input type="text" class="form-control" name="ownerId" maxlength="4" value="{{results.list_owner}}" required readonly>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
