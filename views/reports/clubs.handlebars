<h1>{{title}}</h1>
<table class="table table-bordered">
  <tbody>
    <thead>
      {{#if allclubs}}
      <th>Club</th>
      {{/if}}
      <th>ID</th>
      <th>Name</th>
      <th>Email address</th>
    </thead>
    {{#each results}}
      <tr>
        {{#if ../allclubs}}
        <td>{{club_desc}}</td>
        {{/if}}
        <td>{{id}}</td>
        <td>{{first_name}} {{middle_name}} {{last_name}}</td>
        <td>{{email_address}}</td>
      </tr>
    {{else}}
    {{/each}}
  </tbody>
</table>
