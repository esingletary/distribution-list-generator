<h1>Notes</h1>
<a href="/notes/add" class="btn btn-primary mb-3">New Note</a>
<table class="table table-bordered">
  <tbody>
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Number of Notes</th>
      <th>View</th>
    </thead>
    {{#each results}}
      <tr>
        <td>{{person_id}}</td>
        <td>{{first_name}} {{middle_name}} {{last_name}}</td>
        <td>{{num_of_notes}}</td>
        <td><a href="/notes/view/{{person_id}}" class="btn btn-primary">View Notes</a></td>
      </tr>
    {{else}}
    {{/each}}
  </tbody>
</table>
